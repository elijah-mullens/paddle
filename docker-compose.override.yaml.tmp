services:
  dev:
    build:
      dockerfile: docker/Dockerfile.cuda
      args:
        CUDA_VER: "12.9.1"
    deploy:
      resources:
        reservations:
          devices:
            # Activate this if your system supports GPU
            - capabilities: [gpu]
    volumes:
      # This is your main working directory
      - ${HOME}/work:/work
      # This is where you put your large simulation data
      - ${HOME}/data/:/data
