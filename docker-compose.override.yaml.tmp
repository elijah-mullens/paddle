services:
  dev:
    volumes:
      # This maps your physical locations to locations in docker
      # (lhs:rhs, lhs = workspace on physical machine : rhs = workspace on virtual machine)
      # Use ${HOME} for your home directory
      # You can rename "workspace" or "data" to anything else
      # It is prefered that you seperate the soruce code and the results
      - path_to_work_directory/:/workspace
      - path_to_data_directory/:/data
    # This is your main workspace where you can modify your source code
    working_dir: /workspace
